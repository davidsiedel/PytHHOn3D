\newcommand{\Mesh}{
    \mathcal{T}_h
}

\newcommand{\Rd}{
    \mathbb{R}^d
}

\newcommand{\Rdd}{
    \mathbb{R}^{d \times d}
}

\newcommand{\HMesh}{
    H^1(\Mesh;\mathbb{R}^d) = \big\{ \tensori{u} \in L^2(\Omega;\mathbb{R}^{d}), \forall T \in \Mesh, \tensori{u} \vert_T \in H^1(T;\mathbb{R}^{d}) \big\}
}

\newcommand{\HConformal}{
    H^1(\Omega;\mathbb{R}^d) = \big\{ \tensori{u} \in L^2(\Omega;\mathbb{R}^{d}), \nabla \tensori{u} \in L^2(\Omega;\mathbb{R}^{d \times d}) \big\}
}

\newcommand{\HDivOmega}{
    H_{\Div}(\Omega;\mathbb{R}^d) = \big\{ \tensorii{P} \in L^2(\Omega;\mathbb{R}^{d \times d}), \nabla \cdot \tensorii{P} \in L^2(\Omega;\mathbb{R}^{d \times d}) \big\}
}

\newcommand{\HDivMesh}{
    H_{\Div}(\mathcal{T}_h;\mathbb{R}^d) = \big\{ \tensorii{P} \in L^2(T;\mathbb{R}^{d \times d}), \forall T \in \mathcal{T}_h, \nabla \cdot \tensorii{P} \vert_T \in L^2(T;\mathbb{R}^{d \times d}) \big\}
}

